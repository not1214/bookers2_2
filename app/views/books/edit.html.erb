<%= render "layouts/error", obj: @book %>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-10 col-lg-8 col-xl-6">

      <h2>Editing Book</h2>
      
      <%= form_with model:@book, url: book_path(@book), local:true do |f| %>

      <div class="field">
        <%= f.label :Title %>
        <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :Opinion %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      
      <div class="actions">
        <%= f.submit "Update Book", class: "btn btn-success btn-sm" %>
      </div>
      
      <% end %>

      <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>

    </div>
  </div>
</div>
