<div class="container">
  <div class="row">
    <div class="col-3">
    
      <h2>User Info</h2>

      <table class="table">
        <tr>
          <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div>
      <%= link_to edit_user_path(current_user) do %>
        <button class="btn btn-block btn-outline-secondary"><i class="fas fa-user-cog"></i></button>
      <% end %>
      </div>
      
      <h2>New Book</h2>

      <%= form_with model:@book, url: books_path, local:true do |f| %>

      <div class="field">
        <%= f.label :Title %>
        <%= f.text_field :title, class: "form-control" %> 
      </div>

      <div class="field">
        <%= f.label :Opinion %>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Create Book", class: "btn btn-success btn-sm" %>
      </div> 
      <% end %>
    </div>
    
    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 10, 10, fallback: "no-image-icon.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>


  </div>
</div>
