<table class="table">
  <tr>
    <%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<div class="row mb-3">
  
  <% if user == current_user %>
    <%= link_to "", edit_user_path(user), class:"btn btn-block btn-outline-secondary fas fa-user-cog" %>
  <% end %>

</div>